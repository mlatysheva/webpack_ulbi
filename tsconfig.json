{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    // esModuleInterop: true allows you to import CommonJS modules into your TypeScript files without having to use require()
    "noImplicitAny": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    // allowSyntheticDefaultImports: true allows you to import modules that don't have a default export, 
    // instead of writing import * as express from 'express' you can write import express from 'express'
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
    }
  }
}